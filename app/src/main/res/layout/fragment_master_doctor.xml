<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Admin.MasterDoctorFragment">


    <TextView
        android:id="@+id/tvMasterDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Master Doctor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvSearchDoctorAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_search_24"
        android:ems="10"
        android:hint="Search Doctor Email"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProfileDoctorAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Profile"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmailDoctorAdmin"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Doctor Email"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBtnDetailAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Detail"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMasterDoctor"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="15dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tvTotalDoctorAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Total Doctor :"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>